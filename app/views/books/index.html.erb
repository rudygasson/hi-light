<div class="container">
  <div data-controller="scroll-progress booksindex" class="h-2 bg-indigo-400 fixed top-0">
    <%= render "shared/searchbooks" %>
    <div class="cards">
      <% @books.each do |book| %>
        <%= link_to book_path(book), class:"text-decoration-none cards-clickable d-flex justify-content-center" do  %>
          <div class="card-book">
            <% if book.cover.attached? %>
              <%= cl_image_tag book.cover.key, crop: :fill %>
            <% else %>
              <%= image_tag "covers/cover-#{book.default_cover}.png" %>
            <% end %>
              <h4> <%= book.title %> </h4>
              <p> <%= book.author.name %> </p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
